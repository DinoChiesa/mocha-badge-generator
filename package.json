{
    "name": "mocha-badge-generator",
    "version": "0.5.2",
    "description": "Mocha reporter which outputs badge with the number of tests passed and failed.",
    "main": "src/index.js",
    "bin": {
        "mbg": "./bin/mbg.js",
        "mocha-badge-generator": "./bin/mbg.js"
    },
    "scripts": {
        "build-cli-svg": "clp --config=bin/optionDefinitions.js cli.svg",
        "bin": "./bin/mbg.js",
        "lint": "eslint .",
        "test": "nyc --all --reporter=text mocha",
        "test-watch": "mocha -w",
        "cov": "nyc --all --reporter=text npm test",
        "coverage": "nyc --all --reporter=lcov npm test"
    },
    "nyc": {
        "exclude": [
            ".eslintrc.js",
            "coverage",
            "test"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ianpogi5/mocha-badge-generator.git"
    },
    "keywords": [
        "mocha",
        "reporter",
        "badge",
        "shield",
        "svg"
    ],
    "author": "Ian Dela Cruz <iandc76@gmail.com>",
    "contributors": [
        "Brett Zamir"
    ],
    "engines": {
        "node": ">=7.6.0"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ianpogi5/mocha-badge-generator/issues"
    },
    "homepage": "https://github.com/ianpogi5/mocha-badge-generator",
    "dependencies": {
        "badge-up": "https://github.com/brettz9/badge-up#npm-and-testing-with-promise",
        "command-line-basics": "^0.7.0"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "command-line-publish": "^0.7.0",
        "eslint": "^6.8.0",
        "mocha": "^7.0.0",
        "nyc": "^15.0.0",
        "svg2png": "^4.1.1"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "avoid"
    }
}
